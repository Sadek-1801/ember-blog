<article>
  <div class="blog_card">
    <div class="blog_card_image">
      <img src={{@post.image}} width="250" height= "300" alt="">
    </div>
    <div class="blog_card_content">
      <h3>{{@post.title}}</h3>
      <small>By: {{@post.author}} on
        {{@post.published_date}}</small>
      <p>{{@post.description}}</p>
      <LinkTo @route="articles.article" @model={{@post.id}}>
        <h6>Read More</h6>
      </LinkTo>
    </div>
  </div>
</article>